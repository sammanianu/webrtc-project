<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hudlmo.interfaces.loginpage.hudlmo.interfaces.mainmenu.Settings"
    tools:layout_editor_absoluteY="25dp">

    <android.support.design.widget.AppBarLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <include layout="@layout/app_bar_layout" android:id="@+id/main_page_toolbar" />
    </android.support.design.widget.AppBarLayout>

    <ImageButton
        android:id="@+id/profile_image"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/imageview"
        app:srcCompat="@drawable/add_icon" />

    <EditText
        android:id="@+id/profile_displayName"
        android:layout_width="326dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="User Name :"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_marginLeft="20dp"
        tools:layout_marginRight="20dp" />

    <Button
        android:id="@+id/store_btn"
        android:layout_width="217dp"
        android:layout_height="0dp"
        android:text="UPDATE"
        android:textColor="#fff"
        android:background="@drawable/colorbutton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="-26dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_displayName" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="380dp"
        android:layout_height="46dp"
        android:text="User name"
        android:textAlignment="center"
        android:textColorLink="@color/authui_colorPrimaryDark"
        android:textScaleX="1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="2dp"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="327dp"
        android:layout_height="173dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_name"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <ListView
        android:id="@+id/grouplist2"
        android:layout_width="1dp"
        android:layout_height="1dp"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="283dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:text="Click here to upload Image :"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textIsSelectable="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview" />
</android.support.constraint.ConstraintLayout>
